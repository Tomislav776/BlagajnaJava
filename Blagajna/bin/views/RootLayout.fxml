<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="background" stylesheets="@Blagajna.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RootLayout">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="opcije" mnemonicParsing="false" text="Opcije">
            <items>
                  <MenuItem fx:id="dodaj_konobar" mnemonicParsing="false" text="Dodaj konobar" />
                  <MenuItem fx:id="dodaj_artikl" mnemonicParsing="false" text="Dodaj artikl" />
                  <MenuItem fx:id="obracun" mnemonicParsing="false" text="Napravi obračun" />
            </items>
          </Menu>
          <Menu fx:id="aplikacija" mnemonicParsing="false" text="Aplikacija">
            <items>
              <MenuItem fx:id="o_nama" mnemonicParsing="false" text="O nama" />
                  <MenuItem fx:id="postavke" mnemonicParsing="false" text="Postavke" />
                  <Menu fx:id="jezik" mnemonicParsing="false" text="Jezik">
                    <items>
                        <RadioMenuItem fx:id="hrvatski" mnemonicParsing="false" selected="true" styleClass="gumb-jezik" text="Hrvatski">
                           <toggleGroup>
                              <ToggleGroup fx:id="radioGroup1" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="engleski" mnemonicParsing="false" styleClass="gumb-jezik" text="Engleski" toggleGroup="$radioGroup1" />
                    </items>
                  </Menu>
                  <MenuItem fx:id="izlaz1" mnemonicParsing="false" text="Help">
                     <graphic>
                        <Hyperlink fx:id="help" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="izlaz" mnemonicParsing="false" text="Izlaz iz aplikacije">
                     <graphic>
                        <Hyperlink />
                     </graphic></MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
